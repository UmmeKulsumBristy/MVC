<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <style>
        body{
            padding-top:70px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-dark bg-secondary navbar-expand-md fixed-top shadow-sm">
        <div class="container-fluid">

            <span class="navbar-brand">
                <img src="~/Content/Images/logo.svg" alt="" width="48" height="48" class="d-inline-block align-text-top img-thumbnail rounded-circle">
                Worker Management
            </span>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Work logs", "Index", "Workers", new { }, new { @class = "nav-link" })
                    </li>

                </ul>
                <ul class="nav navbar-nav ms-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "nav-link" })
                        </li>
                    }


                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid my-3" style="min-height:500px">
        @RenderBody()


    </div>

    <footer class="container-fluid">
        <p>&copy; @DateTime.Now.Year - HWM</p>
    </footer>
    @RenderSection("scripts", false)
</body>
</html>